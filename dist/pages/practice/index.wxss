  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.practice .stats-bar .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.practice .stats-bar .stat-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}
.practice .stats-bar .stat-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 16rpx;
  text-align: center;
}
