  background: #f6ffed;
}
.practice .input-section .check-result.wrong {
  background: #fff1f0;
}
.practice .input-section .check-result .result-text {
  font-size: 32rpx;
  font-weight: bold;
}
.correct .practice .input-section .check-result .result-text {
  color: #52c41a;
}
.wrong .practice .input-section .check-result .result-text {
  color: #ff4d4f;
}
.practice .control-section {
  margin: 24rpx 0;
}
.practice .control-section .auto-play {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
}
.practice .control-section .auto-play Text {
  font-size: 28rpx;
  color: #333;
}
.practice .answer-section {
