  background: #ff4d4f;
}
.practice .audio-section .audio-controls .speed-toggle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}
.practice .audio-section .audio-controls .speed-toggle:active {
  opacity: 0.8;
}
.practice .audio-section .audio-controls .speed-toggle.slow {
  background: #e6f7ff;
}
.practice .audio-section .audio-controls .speed-toggle .turtle-icon {
  width: 40rpx;
  height: 40rpx;
}
.practice .input-section {
  margin: 32rpx 0;
  padding: 0 24rpx;
}
