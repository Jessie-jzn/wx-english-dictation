.practice {
  padding: 24rpx;
  background: #f6f6f6;
  min-height: 100vh;
}
.practice .audio-section {
  margin: 32rpx 0;
}
.practice .audio-section .audio-progress {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}
