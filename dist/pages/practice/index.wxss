.practice .answer-section .translation {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.practice .answer-section .translation .text {
  color: #666;
}
.practice .button-group {
  display: flex;
  gap: 16rpx;
  margin-top: 48rpx;
  padding: 0 24rpx;
}
.practice .button-group .check-btn,
.practice .button-group .show-answer-btn,
.practice .button-group .next-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.practice .button-group .check-btn {
  background: #07c160;
  color: #fff;
}
.practice .button-group .show-answer-btn {
  background: #1890ff;
  color: #fff;
}
.practice .button-group .next-btn {
  background: #07c160;
  color: #fff;
